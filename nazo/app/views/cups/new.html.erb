<h2>New book</h2>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  	<% @cups.each do |cup| %>
      <tr>
        <td><%= cup.title %></td>
        <td><%= cup.body %></td>
        <td><%= link_to "Show", cup_path(cup.id) %></td>
        <td><%= link_to "Edit", edit_cup_path(cup.id) %></td>
        <td><%= link_to "Destroy", destroy_cup_path(cup.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
      </tr>
    <% end %>
  </tbody>
</table>










<%= form_for(@cup) do |f| %>
  <div class="field">
  	<%= f.label :title, "title" %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :body, "body" %>
    <%= f.text_area :body %>
  </div>

  <div class="field">
    <%= f.submit "Create Book" %>
  </div>
<% end %>
