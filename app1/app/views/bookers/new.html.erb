<% if flash[:notice] %>
    <p id="notice"><%= flash[:notice] %></p>
<% end %>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  	<% @bookers.each do |booker| %>
      <tr>
        <td><%= booker.title %></td>
        <td><%= booker.body %></td>
        <td><%= link_to "Show", booker_path(booker.id) %></td>
        <td><%= link_to "Edit", edit_booker_path(booker.id) %></td>
        <td><%= link_to "Destroy", booker_path(booker.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<h2>New book</h2>

 <%= form_for(@booker) do |f| %>
  <div class="field">
  	<%= f.label :Title %>
  	<%= f.text_field :title %>
  </div>

  <div class="field">
  	<%= f.label :Body %>
  	<%= f.text_area :body %>
  </div>

  <div class="actions">
  	<%= f.submit "Create Book" %>
  </div>

  <% end %>