
    <h2>User info</h2>
    <% @users.find([:id]) do |f| %>

    <%= attachment_image_tag f, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>

    <table class="table">

      <tbody><tr></tr>
      <tr>
    	  <th>name</th>
    	  <th><%= f.name %></th>
      </tr>
      <tr>
    	  <th>introduction</th>
    	  <th><%= f.introduction %></th>
      </tr>
    </tbody></table>
    <% if f == current_user.id %>
    <div class="row">
      <%= link_to "", edit_user_path(f), class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
    </div>
    <% end %>

<% end %>



